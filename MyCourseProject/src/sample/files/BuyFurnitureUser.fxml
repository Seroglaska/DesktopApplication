<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: #DC143C;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.usercontrollers.BuyFurnitureController">
    <children>
        <AnchorPane layoutY="100.0" prefHeight="301.0" prefWidth="600.0" style="-fx-background-color: #F08080;">
            <children>
                <Button fx:id="buyButton" layoutX="213.0" layoutY="216.0" mnemonicParsing="false" onAction="#clickBuyButton" prefHeight="51.0" prefWidth="190.0" text="Купить">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Button>
                <TextField fx:id="quantity" layoutX="229.0" layoutY="114.0" prefHeight="34.0" prefWidth="158.0" />
                <Label layoutX="90.0" layoutY="118.0" prefHeight="27.0" prefWidth="114.0" text="Количество">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <Button fx:id="back" layoutX="427.0" layoutY="24.0" mnemonicParsing="false" onAction="#clickBack" prefHeight="47.0" prefWidth="148.0" text="Назад">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
